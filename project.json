{
	"plugins": [ "watch", "npm" ],
	"watch": {
		"rules": {
			"client": {
				"files": "client/*.js",
				"tasks": "grunt jshint:client concat:client concat:debug"
			},
			"server": {
				"files": "server/*.js",
				"tasks": "grunt jshint:server"
			},
			"css": {
				"files": "client/*.css",
				"tasks": "grunt concat:css concat:html concat:htmldbg"
			},
			"html": {
				"files": [ "client/html/*.html", "public/build/ide.css" ],
				"tasks": "grunt concat:html concat:htmldbg"
			}
		}
	}
}
